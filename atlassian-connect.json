{
    "key": "github-code-stats-for-bitbucket",
    "name": "GitHub Code Stats for Bitbucket",
    "description": "An add-on that brings GitHub like code stats to your Bitbucket repo overview",
    "vendor": {
        "name": "Agustín Rodríguez",
        "url": "http://agurodriguez.net"
    },
    "baseUrl": "{{localBaseUrl}}",
    "authentication": {
        "type": "jwt"
    },
    "lifecycle": {
        "installed": "/installed",
        "uninstalled": "/uninstalled"
    },
    "modules": {
        "oauthConsumer": {
            "clientId": "{{consumerKey}}"
        },
        "webhooks": [
            {
                "event": "*",
                "url": "/webhook"
            }
        ],
        "webItem": [
        ],
        "repoPage": [
        ],
        "webPanel": [
            {
                "url": "/code-stats-overview?repoPath={repo_path}",
                "name": {
                    "value": "GitHub Code Stats for Bitbucket"
                },
                "location": "org.bitbucket.repository.overview.informationPanel",
                "key": "code-stats-overview"
            }
        ]
    },
    "scopes": ["project", "repository"],
    "contexts": ["personal"]
}
